<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_10sdp">

        <TextView
            android:id="@+id/specialRemark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_toStartOf="@+id/callButton"
            android:ellipsize="end"
            android:fontFamily="@font/karlabold"
            android:textColor="@color/red"
            android:textSize="@dimen/_12sdp"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/isScheduleTrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/callButton"
            android:ellipsize="end"
            android:fontFamily="@font/karlabold"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/red"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_below="@+id/specialRemark"
            android:text="Pickup customer at:-5:45 PM"/>

        <TextView
            android:id="@+id/textViewCustomerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/isScheduleTrip"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_toStartOf="@+id/callButton"
            android:ellipsize="end"
            android:fontFamily="@font/karlabold"
            android:lines="1"
            android:textColor="@color/secondary_black"
            android:textSize="@dimen/_12sdp" />

        <ImageButton
            android:id="@+id/callButton"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/round"
            app:srcCompat="@drawable/call" />

        <Button
            android:id="@+id/btnStart"
            style="@style/action_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_below="@+id/textViewCustomerName"
            android:layout_marginTop="@dimen/_5sdp"
            android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
            android:text="Start Trip"
            android:textColor="@color/white"
            android:visibility="visible"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>