<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">-
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="customRatingBar1" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_custom_bar1</item>
    </style>

    <style name="changeButtonColor">
        <item name="android:textSize">@dimen/header_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TextViewLargeRegular" parent="android:TextAppearance.Large">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">3dp</item>
    </style>

    <style name="action_button" parent="android:Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/karlabold</item>
        <item name="android:background">@drawable/background_button_shape</item>
    </style>

    <style name="toolbar" parent="android:Widget.ActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/primarycolor</item>

    </style>

    <style name="buttonLogout" parent="android:Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@color/amber_500</item>
    </style>

    <style name="TextViewSmall" parent="android:TextAppearance.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_hint</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="TextViewMedium" parent="android:TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textcolorpr</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>


    <style name="TextViewBig" parent="android:TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textcolorpr</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="fontFamily">@font/karlaregular</item>
    </style>

    <style name="TextViewSmallBlack" parent="android:TextAppearance.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textcolorpr</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <dimen name="header_text">18sp</dimen>

    <style name="button_css_fast_charging">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:textColor">@color/dark_theme</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>

    </style>

    <style name="white_text_14sp_charging_station_module">
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="white_text_16sp_charging_station_module">
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_with_opacity_charging_station_module">
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:alpha">0.6</item>
    </style>

    <style name="otp_text_style_charging_station" parent="@style/white_text_14sp_charging_station_module">
        <item name="android:background">@drawable/border_bottom</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:width">30dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="collect_cash_screen_heading">
        <item name="android:textColor">@color/secondary_black</item>
        <item name="android:fontFamily">@font/karlaregular</item>
        <item name="android:textSize">@dimen/eighteen_sp</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="collect_cash_screen_text">
        <item name="android:textColor">@color/secondary_black</item>
        <item name="android:fontFamily">@font/karlalight</item>
        <item name="android:textSize">@dimen/sixteen_sp</item>
    </style>


</resources>
